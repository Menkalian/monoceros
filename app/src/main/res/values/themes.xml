<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Monoceros" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorError">@android:color/holo_red_light</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorSurface">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
    </style>
</resources>